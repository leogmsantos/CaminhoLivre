<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.br.caminholivre.Activity.FeedPrincipalActivity">

    <include
        android:id="@+id/toolbar_principal"
        layout="@layout/toolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_feed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.br.caminholivre.Util.SlidingTabLayout
        android:id="@+id/sliding_tab_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        />

</LinearLayout>
